Using `net/html` package

    r := strings.NewReader(templateData)
    z := html.NewTokenizer(r)

    tt := z.Next()
    switch {
    case tt == html.StartTagToken:
      el := &El{}
      el.Type = token.Data
      for _, attr := range token.Attr {
        // ...
      }
      el.Children = parseChildren(z)
    case tt == html.EndTagToken:
